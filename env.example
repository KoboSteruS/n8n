# =============================================================================
# N8N CONFIGURATION
# =============================================================================

# Basic N8N Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production

# Важно: Генерируйте уникальный ключ шифрования и НЕ ТЕРЯЙТЕ ЕГО!
# Используйте: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your-very-secure-encryption-key-here

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/
N8N_EDITOR_BASE_URL=http://localhost:5678

# Security Configuration
N8N_SECURE_COOKIE=false
N8N_LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your-secure-postgres-password
POSTGRES_SCHEMA=public

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================

# Установите ваш часовой пояс
TIMEZONE=Europe/Moscow

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Для production окружения
# N8N_HOST=yourdomain.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://yourdomain.com/
# N8N_EDITOR_BASE_URL=https://yourdomain.com
# N8N_SECURE_COOKIE=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Для разработки с туннелем (не для production!)
# N8N_TUNNEL_MODE=true 